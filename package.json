{
  "name": "file-selector",
  "displayName": "File Selector",
  "description": "Adds the ability to mark a file in a workspace as selected to enable quickly setting e.g. a launch target in a debug configuration.",
  "version": "0.0.1",
  "repository": {
    "url": "https://github.com/lukas-lang/file-selector"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fileSelector.changeSelectedFile",
        "title": "Change Selected File"
      },
      {
        "command": "fileSelector.selectedFile",
        "title": "Get Selected File (for variables)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  }
}